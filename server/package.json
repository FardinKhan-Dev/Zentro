{
  "name": "zentro-server",
  "version": "1.0.0",
  "description": "Zentro - E-Commerce Backend Server",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon -L server.js",
    "worker": "node worker.js",
    "worker:dev": "nodemon -L worker.js",
    "start:prod": "pm2-runtime start ecosystem.config.js",
    "send:test-email": "node scripts/send_test_email.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:queue": "node scripts/test_queue.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "ecommerce",
    "express",
    "mongodb",
    "redis",
    "bullmq"
  ],
  "author": "Zentro Team",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.63.2",
    "cloudinary": "^2.8.0",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.20.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pino": "^9.5.0",
    "pino-http": "^11.0.0",
    "pm2": "^6.0.14",
    "redis": "^5.9.0",
    "sanitize-html": "^2.11.0",
    "socket.io": "^4.8.1",
    "stripe": "^19.3.1",
    "validator": "^13.15.23",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.0.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
