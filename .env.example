# ===========================================
# ZENTRO E-COMMERCE - ENVIRONMENT VARIABLES
# ===========================================

# -----------------
# Node Environment
# -----------------
NODE_ENV=development
PORT=5000

# -----------------
# Database
# -----------------
MONGODB_URI=mongodb://admin:password@mongo:27017/zentro?authSource=admin
# Production: mongodb+srv://<user>:<pass>@cluster0.xxxxx.mongodb.net/zentro_production?retryWrites=true&w=majority

# -----------------
# Redis
# -----------------
REDIS_URL=redis://redis:6379
# Production (Upstash): redis://default:<password>@your-db.upstash.io:6379

# -----------------
# JWT & Sessions
# -----------------
JWT_ACCESS_SECRET=your_jwt_access_secret_key_change_this_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_this_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_COOKIE_EXPIRE=7d
SESSION_SECRET=your_session_secret_key_change_this_in_production
SESSION_NAME=sid
SESSION_MAX_AGE=86400000

# -----------------
# Stripe Payments
# -----------------
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# -----------------
# Cloudinary
# -----------------
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# -----------------
# Google OAuth
# -----------------
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
# Production: https://your-api.onrender.com/api/auth/google/callback

# -----------------
# Gmail OAuth2 (Email Service)
# -----------------
EMAIL_USER=your_email@gmail.com
GMAIL_CLIENT_ID=your_oauth_client_id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_oauth_client_secret
GMAIL_REFRESH_TOKEN=your_oauth_refresh_token
EMAIL_FROM=Zentro <no-reply@yourdomain.com>

# -----------------
# Google Gemini AI (Optional)
# -----------------
GEMINI_API_KEY=your_gemini_api_key_get_from_google_ai_studio

# -----------------
# n8n Automation (Optional)
# -----------------
N8N_WEBHOOK_URL=http://n8n:5678/webhook-test
# Production (n8n.cloud): https://your-instance.app.n8n.cloud/webhook
# Leave empty to disable n8n webhooks

# -----------------
# SMS Service (Optional)
# -----------------
TEXTBEE_API_KEY=your_textbee_api_key
TEXTBEE_DEVICE_ID=your_textbee_device_id

# -----------------
# URLs
# -----------------
CLIENT_URL=http://localhost:5173
# Production: https://your-app.vercel.app

API_URL=http://localhost:5000
# Production: https://your-api.onrender.com
